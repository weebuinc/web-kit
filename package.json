{
  "name": "@weebuinc/web-kit",
  "version": "0.0.0",
  "description": "Weebu Web Utility Kit",
  "main": "lib/index",
  "types": "index",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "copy": "cp README.md docs/pages/_index.md",
    "clean": "rm -rf lib/*",
    "docs": "npm run copy && serve docs/",
    "format": "./node_modules/.bin/prettier --write \"src/**/*.ts\" \"src/**/*.tsx\"",
    "test": "./node_modules/.bin/jest",
    "coverage": "./node_modules/.bin/jest --coverage",
    "preversion": "npm run clean && npm run format && npm test",
    "version": "npm run build && git add .",
    "postversion": "git push && git push --tags && npm publish --access public",
    "patch": "npm version patch -m \"[PATCH] version (%s)\"",
    "minor": "npm version minor -m \"[MINOR] version (%s)\"",
    "major": "npm version major -m \"[MAJOR] version (%s)\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/weebuinc/web-kit.git"
  },
  "keywords": [
    "Weebu",
    "Web",
    "Kit",
    "Utilities"
  ],
  "author": "Joseph Eniojukan <joseph@weebu.ca>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/weebuinc/web-kit/issues"
  },
  "homepage": "https://github.com/weebuinc/web-kit",
  "devDependencies": {
    "@swc/cli": "0.1.57",
    "@swc/core": "1.3.24",
    "@swc/jest": "0.2.24",
    "@types/jest": "29.2.4",
    "jest": "29.3.1",
    "prettier": "2.8.1",
    "serve": "14.1.2"
  }
}